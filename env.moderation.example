# Moderation Dashboard Configuration

# Admin Authentication
ADMIN_PASSWORD=your_secure_password_here

# Database
DATABASE_PATH=xeinst_reddit_bot/data/xeinst_bot.db

# Posting Limits
GLOBAL_MAX_POSTS_PER_HOUR=10
MAX_POSTS_PER_ACCOUNT_PER_DAY=5

# Safety Settings
QUIET_HOURS=23-6
BLACKLIST=politics,nsfw,spam,scam,fake
SIMILARITY_BLOCK_THRESHOLD=0.8

# Worker Settings
WORKER_INTERVAL_SECONDS=60

# Platform-specific settings
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=XeinstBot/1.0

# Bluesky Configuration
BLUESKY_IDENTIFIER=your_bluesky_identifier
BLUESKY_PASSWORD=your_bluesky_password
BLUESKY_SERVICE_URL=https://bsky.social

# Twitter Configuration (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# LinkedIn Configuration (optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
